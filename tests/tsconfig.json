{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../src/**/*"
  ],
  "exclude": ["node_modules"]
}
